# Bybit API Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Environment Selection
USE_TESTNET=true

# Bybit REST API Endpoints
REST_TESTNET=https://api-testnet.bybit.com
REST_MAINNET=https://api.bybit.com

# Bybit WebSocket Endpoints
WS_PUBLIC_TESTNET=wss://stream-testnet.bybit.com/v5/public
WS_PRIVATE_TESTNET=wss://stream-testnet.bybit.com/v5/private
WS_PUBLIC_MAINNET=wss://stream.bybit.com/v5/public
WS_PRIVATE_MAINNET=wss://stream.bybit.com/v5/private

# Storage Configuration
STORAGE_BACKEND=parquet
STORAGE_SQLITE_PATH=./data/market_maker.db
STORAGE_PG_HOST=localhost
STORAGE_PG_PORT=5432
STORAGE_PG_DATABASE=market_maker
STORAGE_PG_USERNAME=market_maker
STORAGE_PG_PASSWORD=your_password_here
STORAGE_PG_SCHEMA=public

# Database Configuration (Optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=market_maker
POSTGRES_USER=market_maker
POSTGRES_PASSWORD=your_password_here

# Monitoring
PROMETHEUS_PORT=8000
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
